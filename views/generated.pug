html
  include header.pug
  body
    container
      div(class="row")
        div( class="col m8 offset-m2")
          div(class='card center')
            div( class="card-content")
              span(class='card-title center deep-purple-text') Your Generated Name 
              
              form(method="POST" action="/api/random")
                input(type="text", name="random", required , value="" + random) 
                br
                br
                input.btn.btn-primary(type='submit', value="SAVE") 
              a(href="/api/random")
                button.btn.btn-primary GENERATE NEW 
          div(class='card center')
            div( class="card-content")
              span(class='card-title center deep-purple-text') generated names
              each names in name
                form(method="POST", action="/api/random/edit/" + names._id)
                  input(type=text, name="random", required, value="" + names.name)
                  input.btn.btn-primary(type='submit', value="SAVE EDITED")
                form(method="POST", action="/api/random/delete/" + names._id)
                  input.btn.btn-primary(type='submit', value="DELETE")
                br
